<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="EmailSubscribers">
	<resultMap id="AvatarMap"
		type="com.nwm.api.entities.EmailSubscribersEntity">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="email" column="email" />
		<result property="text" column="text" />
		<result property="id_company" column="id_company" />
		<result property="id_employee" column="id_employee" />
		<result property="offset" column="offset" />
		<result property="status" column="status" />
		<result property="is_delete" column="is_delete" />
		<result property="created_date" column="created_date" />
		<result property="created_by" column="created_by" />
		<result property="updated_date" column="updated_by" />
	</resultMap>
	
	<select id="getListDropdown" resultMap="AvatarMap" parameterType="String">
		SELECT
			t.*,
			t.name AS text
		FROM
			`email_subscribers` AS t
		WHERE
			t.`status` = 1 AND t.is_delete = 0;
	</select>
	
	<select id="getList" resultType="Map" >
		SELECT
			s.id,
			s.`name`,
			s.`status`,
			s.is_delete,
			s.`email`
		FROM
			email_subscribers s 	
		WHERE s.is_delete = 0
		<if test="keyword != null">
			AND s.name LIKE CONCAT("%",#{keyword}, "%")
		</if> 	
		    order by
	        <choose>  
				<when test="sort_column != null and sort_column != ''">
	                s.${sort_column} ${order_by}
	            </when>
	            
	            <otherwise>
			      s.id DESC
			    </otherwise>                                                  
	        </choose>  
		 	 
		<if test="limit > 0">
			LIMIT ${limit} OFFSET ${offset};
		</if>
	</select>
	
  	
	
	<select id="getTotalRecord"  resultType="int" parameterType="com.nwm.api.entities.EmailSubscribersEntity">
    	SELECT count(*) as totalRow
		FROM `email_subscribers` s WHERE s.is_delete = 0
		<if test="keyword != null">
			AND s.name LIKE CONCAT("%",#{keyword}, "%")
		</if> 
  	</select>
  	
  	
  	<update id="updateStatus">
		UPDATE `email_subscribers`
		SET	
			`status` = #{status}
		WHERE
			`id` = #{id}
	</update>
	<update id="delete">
		UPDATE `email_subscribers`
		SET
			`is_delete` = #{is_delete}
		WHERE
			`id` = #{id}
	</update>
	
	
	<insert id="insertEmailSubscribers" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `email_subscribers`(
		`id_company`,
		`id_employee`,
			`name`,
			`email`
		)VALUES(
		#{id_company},
		#{id_employee},
			#{name},
			#{email}
		);
		<selectKey keyProperty="id" resultType="int">
	        SELECT 
	        LAST_INSERT_ID() as id
        </selectKey>
	</insert>
	
	<update id="updateEmailSubscribers">
		UPDATE `email_subscribers`
		SET
			`name` = #{name},
			`email` = #{email}
		WHERE
			`id` = #{id}
	</update>
	
</mapper>