<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CustomAlertMetric">
    <resultMap id="DeviceMap"
               type="com.nwm.api.entities.DeviceEntity">
        <result property="id" column="id" />
        <result property="name" column="name" />
        <result property="id_device_type" column="id_device_type" />
        <result property="is_delete" column="is_delete" />
    </resultMap>

    <select id="getMetricListByDeviceTypeId" resultType="Map">
        SELECT
            id,
            name as text,
            field_data_name
        FROM
            custom_alert_metric
        WHERE
        id_device_group = #{id_device_group}
        AND is_delete = 0
    </select>
</mapper>